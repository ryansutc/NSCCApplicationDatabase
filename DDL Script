--  DDL for Trigger TR_COUNTRIESLU_BI
CREATE OR REPLACE TRIGGER "RYAN_DDL"."TR_COUNTRIESLU_BI" -- bi = before insert 
BEFORE INSERT ON countrieslu 
FOR EACH ROW
 WHEN (new.id IS NULL) BEGIN
  SELECT countrieslu_seq.NEXTVAL
  INTO   :new.id
  FROM   dual
END
/;
ALTER TRIGGER "RYAN_DDL"."TR_COUNTRIESLU_BI" ENABLE;
